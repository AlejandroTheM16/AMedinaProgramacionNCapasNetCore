@model ML.Usuario
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>


<h2>Form</h2>

<div class="row">
    <div class="container">
        <div class="col-md-12">
            <h2>Usuario</h2>
